<%- include('./partials/head') %>

</head>

<body class="body-detalle">
    <%- include('./partials/header') %>

    <div class="uk-container">
        <div class="uk-section">

            <h1 class="uk-text-center"><%= title %> </h1>

            <div class="comentarios uk-flex uk-flex-center uk-margin-large-top">
                <ul class="uk-flex uk-flex-wrap uk-flex-between uk-child-width-1-3 uk-padding-remove">
                    <% for( let i = 0; i < productos.length; i++ ) { %>
                        <li class="uk-card uk-card-default uk-card-hover uk-card-body uk-margin" >
                            <a href="/productos/detalle/<%= productos[i].id %>" >
                                <img src="<%= productos[i].img_url %>" width="90%">
                                <h4><%= productos[i].nombre %></h4>
                                <h6>$ <%= productos[i].precio %></h6>
                                <h6><%= productos[i].marca %></h6>
                            </a>
                            <div>
                                <a class="a" id="color1" href="/productos/editar/<%= productos[i].id %>">Editar</a>
                                <a class="a" id="color2" href="/productos/borrar/<%= productos[i].id %>">Borrar</a>
                            </div>
                        </li>
                        
                    <% } %>
                </ul>
            </div>
        </div>
    </div>

</body>

</html> 